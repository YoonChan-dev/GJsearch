name: Build and Deploy

on:
  push:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Replace API Key
        run: |
          sed -i "s/'YOUR_API_KEY_HERE'/'${{ secrets.API_KEY }}'/g" index.html
      
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v2
